<mui:ModernWindow x:Class="Project_Nova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="using:App"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="{StaticResource appName}"
        Height="720" Width="1280"
        ContentSource="/page/homepage.xaml">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="{StaticResource appName}" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Homepage" Source="/page/homepage.xaml"  />
                <mui:Link DisplayName="Weather" Source="/page/weather.xaml" />
                <mui:Link DisplayName="News" Source="/page/news.xaml" />
                <mui:Link DisplayName="Traffic"  Source="/page/traffic.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>
